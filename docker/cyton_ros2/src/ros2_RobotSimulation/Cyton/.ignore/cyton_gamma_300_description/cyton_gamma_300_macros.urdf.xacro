<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="cyton_gamma_300">

    <!-- Initial footprint motor used here -->
    <xacro:macro name="base_footprint" params="prefix">
        <link name="base_footprint">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <sphere radius="0.001" />
                </geometry>
                <material name="white">
                    <color rgba="1 1 1 1"/>
                </material>
            </visual>
        </link>

        <joint name="base_joint" type="fixed">
            <parent link="base_footprint" />
            <child link="${prefix}base_link" />
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
        </joint>
    </xacro:macro>

    <xacro:macro name="cyton_gamma_300" params="prefix virtual_ee">
        <!-- Base of robot here -->
        <link name="${prefix}base_link">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/gamma_base.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0 0.0115 0.047"/>
                <geometry>
                    <box size="0.154 0.177 0.094"/>
                </geometry>
            </collision>
        </link>

        <!-- First motor located here -->
        <joint name="${prefix}joint1" type="revolute">
            <parent link="${prefix}base_link" />
            <child link="${prefix}joint1" />
            <origin xyz="0 0 0.05315" rpy="0 0 1.2" />
            <limit lower="-2.618" upper="2.618" effort="100.0" velocity="1.0" />
            <axis xyz="0 0 1" />
        </joint>

        <link name="${prefix}joint1">
            <visual>
                <origin xyz="0 0 0" rpy="1.5708 0 3.14159"/>
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/joint1.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0.0 0.069 0.0587"/>
                <geometry>
                    <box size="0.09829 0.18143 0.08392"/>
                </geometry>
            </collision>
        </link>

        <!-- Second motor located here -->
        <joint name="${prefix}joint2" type="revolute">
            <parent link="${prefix}joint1" />
            <child link="${prefix}joint2" />
            <origin xyz="0 0 0.063" rpy="1.2 0 0" />
            <limit lower="-1.8326" upper="1.8326" effort="100.0" velocity="1.0" />
            <axis xyz="1 0 0" />
        </joint>

        <link name="${prefix}joint2">
            <visual>
                <origin xyz="0.028 0 0" rpy="0 1.5708 0" />
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/joint2.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="-0.001 0.064 0.1745"/>
                <geometry>
                    <box size="0.0709 0.19363 0.083"/>
                </geometry>
            </collision>
        </link>

        <!-- Third motor located here -->
        <joint name="${prefix}joint3" type="revolute">
            <parent link="${prefix}joint2" />
            <child link="${prefix}joint3" />
            <origin xyz="0 0 0.089" rpy="0 0 1.2" />
            <limit lower="-1.8326" upper="1.8326" effort="100.0" velocity="1.0" />
            <axis xyz="0 0 1" />
        </joint>

        <link name="${prefix}joint3">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 3.92699" />
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/joint3.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="-0.0225 0.039 0.3068"/>
                <geometry>
                    <box size="0.0717 0.1846 0.0756"/>
                </geometry>
            </collision>
        </link>

        <!-- Fourth motor located here -->
        <joint name="${prefix}joint4" type="revolute">
            <parent link="${prefix}joint3" />
            <child link="${prefix}joint4" />
            <origin xyz="0 0 0.052" rpy="1.2 0 0" />
            <limit lower="-1.8326" upper="1.8326" effort="100.0" velocity="1.0" />
            <axis xyz="1 0 0" />
        </joint>

        <link name="${prefix}joint4">
            <visual>
                <!-- Not sure if this is the correct orientation. -->
                <origin xyz="0.027 0 0" rpy="1.5708 0 1.5708" />
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/joint4.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0.0346 0.0461 0.4228"/>
                <geometry>
                    <box size="0.0549 0.1557 0.076"/>
                </geometry>
            </collision>
        </link>

        <!-- Fifth motor located here -->
        <joint name="${prefix}joint5" type="revolute">
            <parent link="${prefix}joint4" />
            <child link="${prefix}joint5" />
            <origin xyz="0 0 0.072" rpy="0 -1.2 0" />
            <limit lower="-1.8326" upper="1.8326" effort="100.0" velocity="1.0" />
            <axis xyz="0 -1 0" />
        </joint>

        <link name="${prefix}joint5">
            <visual>
                <origin xyz="0 0 0" rpy="1.5708 0 0" />
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/joint5.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0.0172 0.0209 0.516"/>
                <geometry>
                    <box size="0.0535 0.1160 0.0402"/>
                </geometry>
            </collision>
        </link>

        <!-- Sixth motor located here -->
        <joint name="${prefix}joint7" type="revolute">
            <parent link="${prefix}joint5" />
            <child link="${prefix}joint7" />
            <origin xyz="0 0 0.0718" rpy="1.2 0 0" />
            <limit lower="-1.8326" upper="1.8326" effort="100.0" velocity="1.0" />
            <axis xyz="1 0 0" />
        </joint>

        <link name="${prefix}joint7">
            <visual>
                <origin xyz="0.027 0 0" rpy="1.5708 0 1.5708" />
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/joint7.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0.0257 0.0118 0.5617"/>
                <geometry>
                    <box size="0.026 0.0435 0.05185"/>
                </geometry>
            </collision>
        </link>

        <!-- Seventh motor located here -->
        <joint name="${prefix}joint6" type="revolute">
            <parent link="${prefix}joint7" />
            <child link="${prefix}joint6" />
            <origin xyz="0 0 0.051425" rpy="0 0 1.2" />
            <limit lower="-2.61799" upper="2.61799" effort="100.0" velocity="1.0" />
            <axis xyz="0 0 1" />
        </joint>

        <link name="${prefix}joint6">
            <visual>
                <origin xyz="0 0 0" rpy="0 3.14159 1.5708" />
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/joint6.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="-0.0063 -0.0014 0.6102"/>
                <geometry>
                    <box size="0.0518 0.0723 0.1004"/>
                </geometry>
            </collision>
        </link>

        <!-- Eigth motor located here -->
        <joint name="${prefix}joint8" type="prismatic">
            <parent link="${prefix}joint6" />
            <child link="${prefix}joint8" />
            <origin xyz="-0.01331 0.00485 0.077225" rpy="0 0 0" />
            <limit lower="-0.008" upper="0.008" effort="100.0" velocity="1.0" />
            <axis xyz="1 0 0" />
        </joint>

        <link name="${prefix}joint8">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/joint8.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="-0.0167 0.0172 0.7254"/>
                <geometry>
                    <box size="0.015 0.0229 0.0475"/>
                </geometry>
            </collision>
        </link>

        <!-- Eighth motor located here -->
        <joint name="${prefix}joint9" type="prismatic">
            <parent link="${prefix}joint6" />
            <child link="${prefix}joint9" />
            <origin xyz="0.0098 0.00485 0.077225" rpy="0 0 0" />
            <limit lower="-0.008" upper="0.008" effort="100.0" velocity="1.0" />
            <mimic joint="${prefix}joint8" multiplier="-1"/>
            <axis xyz="1 0 0" />
        </joint>

        <link name="${prefix}joint9">
            <visual>
                <origin xyz="0 0 0" rpy="0 0 0" />
                <geometry>
                    <mesh filename="package://cyton_gamma_300_description/meshes/joint9.dae"/>
                </geometry>
            </visual>
            <collision>
                <origin xyz="0.0132 0.0172 0.7254"/>
                <geometry>
                    <box size="0.015 0.0229 0.0475"/>
                </geometry>
            </collision>
        </link>

        <xacro:if value="${virtual_ee}"> <!-- virtual end-effector -->
            <joint name="${prefix}virtual_endeffector_joint" type="fixed">
                <parent link="${prefix}joint6" />
                <child link="${prefix}virtual_endeffector" />
                <origin xyz="-0.002316 0.0079 0.079425" rpy="0 0 0" />
            </joint>

            <link name="${prefix}virtual_endeffector">
                <visual>
                    <origin xyz="0 0 0" rpy="0 0 0" />
                    <geometry>
                        <sphere radius="0.002" />
                    </geometry>
                    <material name="grey">
                        <color rgba="0.7 0.7 0.7 0.8" />
                    </material>
                </visual>
            </link>
        </xacro:if>
    </xacro:macro>

</robot>
